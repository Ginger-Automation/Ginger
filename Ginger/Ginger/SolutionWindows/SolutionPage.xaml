<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols1="clr-namespace:Ginger.UserControlsLib"
    x:Class="Ginger.SolutionWindows.SolutionPage"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="800"
    Title="SolutionPage">
    <Grid
        Background="{StaticResource $BackgroundColor_White}">
        <TabControl
            Style="{StaticResource SideNavTabControlStyle}">
            <TabItem
                Style="{StaticResource SideNavTabItemStyle}">
                <TabItem.Header>
                    <TextBlock
                        Text="General"
                        TextTrimming="CharacterEllipsis"
                        FontFamily="Open Sans"
                        FontSize="14"
                        ToolTip="General" />
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Label
                            x:Name="xLoadSolutionlbl"
                            DockPanel.Dock="Top"
                            Style="{StaticResource $LabelStyle}"
                            FontSize="20"
                            Content="Please Load Solution"
                            Visibility="Collapsed"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                        <StackPanel
                            x:Name="xSolutionDetailsStack"
                            DockPanel.Dock="Top"
                            Background="{StaticResource $BackgroundColor_White}"
                            Grid.Row="0"
                            Margin="5,0,5,0">
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="Solution Folder:" />
                            <TextBox
                                x:Name="SolutionFolderTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                IsReadOnly="True" />
                            <StackPanel
                                Orientation="Horizontal">
                                <Label
                                    Style="{StaticResource $LabelStyle}"
                                    Content="Solution Name:" />
                                <usercontrols1:ucShowItemID
                                    x:Name="xShowIDUC"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,0" />
                            </StackPanel>
                            <TextBox
                                x:Name="SolutionNameTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                FontWeight="Bold"
                                FontSize="14"
                                Width="300"
                                HorizontalAlignment="Left" />
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="Account:" />
                            <TextBox
                                x:Name="AccountTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                Width="300"
                                HorizontalAlignment="Left" />
                            <usercontrols1:UCEncryptionKey
                                x:Name="UCEncryptionKey"></usercontrols1:UCEncryptionKey>
                        </StackPanel>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem
                Style="{StaticResource SideNavTabItemStyle}">
                <TabItem.Header>
                    <TextBlock
                        Text="Categories"
                        TextTrimming="CharacterEllipsis"
                        FontFamily="Open Sans"
                        FontSize="14"
                        ToolTip="Categories" />
                </TabItem.Header>
                <TabItem.Content>
                    <Frame
                        x:Name="xCategoriesFrame" />
                </TabItem.Content>
            </TabItem>
            <TabItem
                Style="{StaticResource SideNavTabItemStyle}">
                <TabItem.Header>
                    <TextBlock
                        Text="Self Healing"
                        TextTrimming="CharacterEllipsis"
                        FontFamily="Open Sans"
                        FontSize="14"
                        ToolTip="Self Healing" />
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="30" />
                            <RowDefinition
                                Height="16" />
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="30" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="32" />
                            <ColumnDefinition
                                Width="Auto" />
                            <ColumnDefinition
                                Width="14" />
                            <ColumnDefinition
                                Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Style="{StaticResource $LabelStyle}"
                            Content="Element Matchers"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3" />
                        <CheckBox
                            x:Name="ByPropertyCheckBox"
                            Style="{StaticResource @CheckBoxStyle}"
                            Content="Use Property Matcher"
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Checked="ByPropertyCheckBox_IsCheckedChanged"
                            Unchecked="ByPropertyCheckBox_IsCheckedChanged" />
                        <StackPanel
                            x:Name="ByPropertyScoreStackPanel"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Grid.Row="1"
                            Grid.Column="3">
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="Acceptable Score" />
                            <TextBox
                                x:Name="ByPropertyAcceptableScoreTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                MinWidth="40"
                                Height="24"
                                VerticalAlignment="Top"
                                Margin="4 0 0 0"
                                PreviewTextInput="ByPropertyAcceptableScoreTextBox_PreviewTextInput" />
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="%"
                                Margin="1 0 0 0"/>
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="(between 1-100)"
                                Foreground="#a5a5a5"
                                Margin="4 0 0 0" />
                        </StackPanel>
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Style="{StaticResource $LabelStyle}"
                            Content="Match elements based on their properties like id, name, content etc."
                            Foreground="#a5a5a5" />
                        <Line
                            Grid.Row="3" />
                        <CheckBox
                            x:Name="ByImageCheckBox"
                            Style="{StaticResource @CheckBoxStyle}"
                            Content="Use Image Matcher"
                            Grid.Row="4"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Checked="ByImageCheckBox_IsCheckedChanged"
                            Unchecked="ByImageCheckBox_IsCheckedChanged" />
                        <StackPanel
                            x:Name="ByImageScoreStackPanel"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Grid.Row="4"
                            Grid.Column="3">
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="Acceptable Score" />
                            <TextBox
                                x:Name="ByImageAcceptableScoreTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                MinWidth="40"
                                Height="24"
                                VerticalAlignment="Top"
                                Margin="4 0 0 0"
                                PreviewTextInput="ByImageAcceptableScoreTextBox_PreviewTextInput" />
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="%"
                                Margin="1 0 0 0" />
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="(between 1-100)"
                                Foreground="#a5a5a5"
                                Margin="4 0 0 0" />
                        </StackPanel>
                        <Label
                            Grid.Column="1"
                            Grid.Row="5"
                            Grid.ColumnSpan="3"
                            Style="{StaticResource $LabelStyle}"
                            Content="Match elements based on pixel-by-pixel match of their images using ImageMagick."
                            Foreground="#a5a5a5" />
                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
