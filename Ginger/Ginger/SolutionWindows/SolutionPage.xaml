<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols1="clr-namespace:Ginger.UserControlsLib"
    x:Class="Ginger.SolutionWindows.SolutionPage"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="800"
    Title="SolutionPage">
    <Grid
        Background="{StaticResource $BackgroundColor_White}">
        <TabControl
            Style="{StaticResource SideNavTabControlStyle}">
            <TabItem
                Style="{StaticResource SideNavTabItemStyle}"
                Header="General">
                <TabItem.Content>
                    <Grid>
                        <Label
                            x:Name="xLoadSolutionlbl"
                            DockPanel.Dock="Top"
                            Style="{StaticResource $LabelStyle}"
                            FontSize="20"
                            Content="Please Load Solution"
                            Visibility="Collapsed"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                        <StackPanel
                            x:Name="xSolutionDetailsStack"
                            DockPanel.Dock="Top"
                            Background="{StaticResource $BackgroundColor_White}"
                            Grid.Row="0"
                            Margin="5,0,5,0">
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="Solution Folder:" />
                            <TextBox
                                x:Name="SolutionFolderTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                IsReadOnly="True" />
                            <StackPanel
                                Orientation="Horizontal">
                                <Label
                                    Style="{StaticResource $LabelStyle}"
                                    Content="Solution Name:" />
                                <usercontrols1:ucShowItemID
                                    x:Name="xShowIDUC"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,0" />
                            </StackPanel>
                            <TextBox
                                x:Name="SolutionNameTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                FontWeight="Bold"
                                FontSize="14"
                                Width="300"
                                HorizontalAlignment="Left" />
                            <Label
                                Style="{StaticResource $LabelStyle}"
                                Content="Account:" />
                            <TextBox
                                x:Name="AccountTextBox"
                                Style="{StaticResource $TextBoxStyle}"
                                Width="300"
                                HorizontalAlignment="Left" />
                            <usercontrols1:UCEncryptionKey
                                x:Name="UCEncryptionKey"></usercontrols1:UCEncryptionKey>
                            <!--<Label x:Name="xInvalidKeyLabel" Style="{StaticResource $LabelStyle}" Content="*Please enter valid encryption key" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>-->
                        </StackPanel>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem
                Style="{StaticResource SideNavTabItemStyle}"
                Header="Categories">
                <TabItem.Content>
                    <Frame
                        x:Name="xCategoriesFrame" />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
