<Window x:Class="Ginger.MainWindow" x:Name="xMainWindow" h:GingerHelpProvider.HelpString="Main Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:Ginger.Help"
        xmlns:GingerCore="clr-namespace:GingerCore;assembly=GingerCore"
        xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
        Title="Amdocs BEAT Ginger Automation"    
        Icon="GingerIconNew.ico"        
        Height="600" Width="1000" WindowState="Normal" 
        Closing="MainWindow_Closing" PreviewKeyDown="MainWindow_PreviewKeyDown">
    
    <Grid Background="{StaticResource $BackgroundColor_LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <!--Main Menu -->
        <Grid Grid.Row="0" Background="{StaticResource $BackgroundColor_VeryDarkBlue}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <!--Main Menu- Ginger Icon-->
            <DockPanel Grid.Column="0">
                <usercontrols:ImageMakerControl x:Name="xGingerIconImg" ImageType="GingerIcon" SetAsFontImageWithSize="18" DockPanel.Dock="Left" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                <GridSplitter Width="1" Height="40" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="{StaticResource $BackgroundColor_White}" Margin="10,0,10,0"/>
            </DockPanel>

            <!--Main Menu- Solution Control-->
            <DockPanel Grid.Column="1">
                <StackPanel x:Name="xSolutionSelectionPnl" Orientation="Horizontal" DockPanel.Dock="Left" >
                    <TextBlock x:Name="xSolutionNameTextBlock" TextTrimming="CharacterEllipsis" MaxWidth="300"  TextWrapping="NoWrap" Margin="0,0,0,0" Text="Please Load Solution" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Open Sans" FontSize="20" FontWeight="Normal" Foreground="{StaticResource $SelectionColor_Pink}"   ></TextBlock>
                    <Menu x:Name="xSolutionSelectionMenu" Background="{StaticResource $BackgroundColor_VeryDarkBlue}"  Margin="5,0,0,0" VerticalAlignment="Center">
                        <MenuItem x:Name="xSolutionSelectionMainMenuItem" Style="{StaticResource $MenuItemStyle_ButtonMenu}" ToolTip="Solution Selection" Margin="0,0,0,0"  StaysOpenOnClick="True">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl SetAsFontImageWithSize="20" ImageType="ArrowDown" Width="20" Height="20" Margin="0,0,0,0"/>
                            </MenuItem.Icon>
                            <MenuItem x:Name="xRecentSolutionsMenuItem" Header="Recent Solutions" Style="{StaticResource $MenuItemStyle_ButtonMenuItem}" Click="xRecentSolutionsMenuItem_Click" StaysOpenOnClick="True" Visibility="Collapsed" >
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl SetAsFontImageWithSize="18" ImageType="History"  Margin="0,0,0,0"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="xOpenSolutionMenuItem" Header="Open Solution" Style="{StaticResource $MenuItemStyle_ButtonMenuItem}" Click="xOpenSolutionMenuItem_Click">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl SetAsFontImageWithSize="16"  ImageType="OpenFolder"  Margin="0,0,0,0" HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="xDownloadSolutionMenuItem" Header="Download Solution" Style="{StaticResource $MenuItemStyle_ButtonMenuItem}" Click="xDownloadSolutionMenuItem_Click">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl SetAsFontImageWithSize="16" ImageType="Download"  Margin="0,0,0,0"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="xCreateNewSolutionMenuItem" Header="Create New Solution" Style="{StaticResource $MenuItemStyle_ButtonMenuItem}" Click="xCreateNewSolutionMenuItem_Click">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl SetAsFontImageWithSize="18" ImageType="Add"  Margin="0,0,0,0"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                </StackPanel>

                <ListView x:Name="xSolutionTopNavigationListView" Background="{StaticResource $BackgroundColor_VeryDarkBlue}" BorderBrush="{StaticResource $BackgroundColor_VeryDarkBlue}" SelectionChanged="xSolutionTopNavigationListView_SelectionChanged" Margin="0,5,0,0" VerticalAlignment="Center" DockPanel.Dock="Left">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"></StackPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListViewItem x:Name="xBusinessFlowsListItem" Style="{StaticResource $TopListViewItemStyle}" IsSelected="True">
                        <ListViewItem.Content>
                            <GingerCore:ucTextDicResource Text="[BusinessFlows]" Typography.Capitals="AllSmallCaps" FontSize="20" Margin="0,0,0,3"/>
                        </ListViewItem.Content>
                    </ListViewItem>
                    <ListViewItem x:Name="xRunListItem" Style="{StaticResource $TopListViewItemStyle}" >RUN</ListViewItem>
                    <ListViewItem x:Name="xConfigurationsListItem" Style="{StaticResource $TopListViewItemStyle}">CONFIGURATIONS</ListViewItem>
                    <ListViewItem x:Name="xResourcesListItem" Style="{StaticResource $TopListViewItemStyle}">RESOURCES</ListViewItem>
                </ListView>

                <!--<GridSplitter Width="1" Height="40" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="{StaticResource $SelectionColor_LightBlue}" Margin="10,0,10,0"/>-->


                <Menu x:Name="xSolutionOperationsMenu"  DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="20,0,0,0" Background="{StaticResource $BackgroundColor_VeryDarkBlue}"  VerticalAlignment="Center" >
                    <MenuItem Style="{StaticResource $MenuItemStyle_ButtonMenu}" ToolTip="Solution Operations">
                        <MenuItem.Icon>
                            <usercontrols:ImageMakerControl SetAsFontImageWithSize="25" ImageType="EllipsisH" Width="25" Height="25" Margin="0,0,0,0"/>
                        </MenuItem.Icon>
                        <MenuItem x:Name="xSolutionCheckInMenuItem" Header="Check-In Solution Changes" Style="{StaticResource $MenuItemStyle_ButtonMenuItem}" Click="xSolutionCheckInBtn_Click">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl SetAsFontImageWithSize="16" ImageType="CheckIn"  Margin="0,0,0,0"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem x:Name="xSolutionGetLatestMenuItem" Header="Get Latest Solution Changes" Style="{StaticResource $MenuItemStyle_ButtonMenuItem}" Click="xSolutionGetLatestBtn_Click">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl SetAsFontImageWithSize="16" ImageType="GetLatest"  Margin="0,0,0,0"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>

            </DockPanel>

            <!--Main Menu- User Operations-->
            <StackPanel Orientation="Horizontal" Grid.Column="2">
            </StackPanel>

            <!--Main Menu- Application Configurations/Operations-->
            <StackPanel Orientation="Horizontal" Grid.Column="3">
                <Menu x:Name="xMainConfigurationsMenu"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="{StaticResource $BackgroundColor_VeryDarkBlue}" ToolTip="Application Configurations" Margin="0,0,0,0">
                    <MenuItem Style="{StaticResource $MenuItemStyle_Main}" FlowDirection="RightToLeft">
                        <MenuItem.Icon>
                            <usercontrols:ImageMakerControl ImageType="Config" SetAsFontImageWithSize="18" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                        </MenuItem.Icon>
                        <!--<MenuItem x:Name="GingerCoreNET" Header="Ginger Core NET Tester" Style="{StaticResource $MenuItemStyle}" Visibility="Collapsed" Click="GingerCoreNET_Click" />-->
                        <MenuItem Header="UI Configurations" Style="{StaticResource $MenuItemStyle}" >
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="Screen" SetAsFontImageWithSize="14" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                            <MenuItem x:Name="btnSetTerminologyType" Header="Set Terminology Type" Click="btnSetTerminologyType_Click" Style="{StaticResource $MenuItemStyle}">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="Text" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="btnSetUserType" Header="Set User Type" Click="btnSetUserType_Click" Style="{StaticResource $MenuItemStyle}">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="User" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem  Header="General Configurations" Style="{StaticResource $MenuItemStyle}">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="Fix" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                            <MenuItem x:Name="xAutoLoadLastSolutionMenuItem" Header="Auto Load Last Solution" IsCheckable="True" />
                            <MenuItem x:Name="xAskToUpgradeMenuItem" Header="Do Not Ask To Upgrade Solution" IsCheckable="True" />
                            <MenuItem x:Name="xShowBFSaveWarnMenuItem" Header="Show Business Flow Change Save Warning" IsCheckable="True" />
                        </MenuItem>
                        <MenuItem  Header="Ginger Log" Style="{StaticResource $MenuItemStyle}">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="File" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                            <MenuItem x:Name="btnSetLoggingLevel" Header="Set Logging Level" Click="btnSetLoggingLevel_Click" Style="{StaticResource $MenuItemStyle}">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="Config" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="btnViewLog" Header="Open Log" Click="btnViewLog_Click" Style="{StaticResource $MenuItemStyle}">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="File" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="btnViewLogLocation" Header="Open Log Folder" Click="btnViewLogLocation_Click" Style="{StaticResource $MenuItemStyle}">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="Open" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="btnLaunchConsole" Header="Open Debug Console" Click="btnLaunchConsole_Click" Style="{StaticResource $MenuItemStyle}">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="Window" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </MenuItem>
                </Menu>

                <Menu x:Name="xSupportMenu"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="{StaticResource $BackgroundColor_VeryDarkBlue}" ToolTip="Support" Margin="0,5,0,0">
                    <MenuItem Style="{StaticResource $MenuItemStyle_Main}">
                        <MenuItem.Icon>
                            <usercontrols:ImageMakerControl ImageType="Help" SetAsFontImageWithSize="15" HorizontalAlignment="Center" Margin="0,0,-10,0"/>
                        </MenuItem.Icon>
                        <MenuItem  Header="Ginger Help Library" Style="{StaticResource $MenuItemStyle}" Click="HelpButton_Click">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="FileVideo" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem x:Name="xLoadSupportSiteMenuItem" Header="Ginger Support Site" Style="{StaticResource $MenuItemStyle}" Click="xLoadSupportSiteMenuItem_Click">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="Globe" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem x:Name="xLoadForumSiteMenuItem" Header="Ginger Q&amp;A Fourm Site" Style="{StaticResource $MenuItemStyle}" Click="xLoadForumSiteMenuItem_Click">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="Question" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem x:Name="xOpenTicketMenuItem" Header="Raise Ticket to Core Team" Style="{StaticResource $MenuItemStyle}" Click="xOpenTicketMenuItem_Click">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="Tag" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Support Contacts" Style="{StaticResource $MenuItemStyle}">
                            <MenuItem.Icon>
                                <usercontrols:ImageMakerControl ImageType="Service" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                            </MenuItem.Icon>
                            <MenuItem x:Name="xSupportTeamMenuItem"  Header="Ginger Support Team: AmdocsTestingGingerDVCISupport@int.amdocs.com" Style="{StaticResource $MenuItemStyle}" Click="xSupportTeamMenuItem_Click">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="Email" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem x:Name="xCoreTeamMenuItem" Header="Ginger Core Team: GingerCoreTeam@int.amdocs.com" Style="{StaticResource $MenuItemStyle}" Click="xCoreTeamMenuItem_Click">
                                <MenuItem.Icon>
                                    <usercontrols:ImageMakerControl ImageType="Email" Width="16" SetAsFontImageWithSize="16" HorizontalAlignment="Left"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </MenuItem>
                </Menu>

                <usercontrols:ucButton x:Name="xAboutBtn" ButtonType="ImageButton" HorizontalAlignment="Right" VerticalAlignment="Center" ButtonFontImageSize="18" ButtonImageWidth="16" ButtonImageHeight="16" ButtonImageType="Info" ButtonStyle="{StaticResource $ImageButtonStyle_Menu}" Click="btnAbout_Click" ToolTip="About" Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>

