    <Page x:Class="Ginger.ActivitiesMiniViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:GingerCore="clr-namespace:GingerCore;assembly=GingerCore"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="800"
	Title="ActivitiesBusinessFlowTree">

    <Grid Background="{StaticResource $BackgroundColor_LightGray}">
        
        <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
            <Label Style="{StaticResource @InputFieldLabelStyle}" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Label.Content>
                    <GingerCore:ucTextDicResource Text="Selected [Activity]:"/>
                </Label.Content>
            </Label>
            <ComboBox x:Name="lstActivities" SelectionChanged="lstActivities_SelectionChanged" Width="600" Style="{StaticResource @InputComboBoxStyle}" FontWeight="Bold" FontSize="14" ></ComboBox>
        </StackPanel>
    </Grid>
</Page>
