<UserControlsLib:GingerUIPage x:Class="Ginger.Configurations.ApplitoolsExternalConfigurationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
      xmlns:Activities="clr-namespace:Ginger.BusinessFlowWindows"
      xmlns:UserControlsLib="clr-namespace:Ginger.UserControlsLib"
      mc:Ignorable="d" 
      MinHeight="500" MinWidth="585"
	Title="Applitools Configuration">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" >
        <DockPanel Background="{StaticResource $BackgroundColor_White}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="30"/>
                        <RowDefinition  Height="1*"/>
                    </Grid.RowDefinitions>
                    <usercontrols:ucButton x:Name="xSaveButton" Grid.Row="0" DockPanel.Dock="Top" ButtonType="ImageButton"  ButtonFontImageSize="25" ButtonImageWidth="25" ButtonImageHeight="25" ButtonImageType="Save" Click="xSaveButton_Click" Visibility="Collapsed" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Label Content="Applitools Configuration" Style="{StaticResource $HorizontalExpanderLabelStyle}"/>
                        <usercontrols:ImageMakerControl SetAsFontImageWithSize="16" ToolTip="Enterprise Feature" ImageType="Building"  Width="20" Height="16" Foreground="{StaticResource $BackgroundColor_Black}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <Grid Margin="10,10,0,0" x:Name="xApplitoolsGrid" >
                            <Grid.RowDefinitions>
                                <RowDefinition  Height="50"/>
                                <RowDefinition  Height="0"/>
                                <RowDefinition  Height="50"/>
                                <RowDefinition  Height="0"/>
                                <RowDefinition  Height="0"/>
                                <RowDefinition  Height="0"/>
                                <RowDefinition  Height="50"/>
                                <RowDefinition  Height="0"/>
                                <RowDefinition  Height="50"/>
                                <RowDefinition  Height="0"/>
                                <RowDefinition  Height="50"/>
                                <RowDefinition  Height="0"/>

                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="350*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                                <Label x:Name="xAPIURLLabel" Content="API URL:"   Style="{StaticResource @InputFieldLabelStyle}"  VerticalAlignment="Center" FontSize="12"/>
                                <Label x:Name="xAPIURLLabelValidation" Content="*"   Style="{StaticResource @InputFieldLabelStyle}" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="12"/>
                            </StackPanel>
                            <Activities:UCValueExpression x:Name="xAPIURLTextBox" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="Applitools API URL" Margin="10,0,0,0"  Width="400"/>

                            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
                                <Label x:Name="xAPIKeyLabel" Content="API Key:" Style="{StaticResource @InputFieldLabelStyle}" VerticalAlignment="Center"  FontSize="12"/>
                                <Label x:Name="xAPIKeyLabelValidation" Content="*" Style="{StaticResource @InputFieldLabelStyle}" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="12"/>
                            </StackPanel>
                            <Activities:UCValueExpression x:Name="xAPIKeyTextBox" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="API Key" Margin="10,0,0,0"  Width="400"/>


                        </Grid>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Border
Margin="30,20,10,0"
 Background="GhostWhite"
 CornerRadius="10"
 BorderBrush="#B6E0FE"
 BorderThickness="1"
 VerticalAlignment="Top"
 Height="Auto">
                        <StackPanel Margin="10"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Height="Auto"
         >
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <usercontrols:ImageMakerControl ImageType="Applitools"  Height="20" Width="20" Margin="0,2,10,0"/>
                                <TextBlock Text="About Applitools" 
                    FontWeight="Normal" 
                    FontSize="18"
                    VerticalAlignment="Center"/>

                            </StackPanel>
                            <Separator Margin="0,10,0,10"/>
                            <TextBlock TextWrapping="Wrap"
                Foreground="#333"
                FontSize="12"
                Margin="0,0,0,10">
Applitools is a leading AI-powered visual testing platform.
It uses advanced image comparison and Visual AI to catch even subtle UI issues across browsers, devices, and screen sizes.
Applitools automatically maintains baselines, highlights differences, and supports collaboration for visual reviews.

                            </TextBlock>

                            <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="12" Text="With Ginger, Applitools adds enterprise-grade Visual AI testing into functional flows, ensuring consistent, pixel-perfect user experiences."/>
                            <TextBlock Margin="0,10,0,0" FontSize="14">
<Hyperlink NavigateUri="https://applitools.com/platform-overview" RequestNavigate="Hyperlink_RequestNavigate">
                               <Run Text="Learn more about Applitools"/>
                           </Hyperlink>                                                        <usercontrols:ImageMakerControl ImageType="Link" Height="10" Width="10" Margin="0,2,10,0"/>
                            </TextBlock>
                            <TextBlock Margin="0,10,0,0" FontSize="14">
<Hyperlink NavigateUri="https://ginger-automation.github.io/Ginger-Web-Help/assets/Ginger_By_Amdocs/Integrations/Visual_Testing_using_Applitools.htm" RequestNavigate="Hyperlink_RequestNavigate">
                               <Run Text="Learn more about how to use Applitools in Ginger"/>
                           </Hyperlink>                                                        <usercontrols:ImageMakerControl ImageType="Link" Height="10" Width="10" Margin="0,2,10,0"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </DockPanel>
    </ScrollViewer>
</UserControlsLib:GingerUIPage>
