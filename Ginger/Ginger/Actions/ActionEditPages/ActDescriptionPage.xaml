    <Page x:Class="Ginger.Actions.ActDescriptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	  Title="Action Type Description">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
            <Label x:Name="lblActionType" DockPanel.Dock="Top" Style="{StaticResource @ucTitleStyle_4}" HorizontalAlignment="Stretch">Action Type</Label>
            <ScrollViewer Grid.Row="1" >
                <TextBlock x:Name="ActionHelpTextBlock" DockPanel.Dock="Top" TextWrapping="Wrap" Style="{StaticResource @TextBlockStyle}" Margin="2,2,0,0"></TextBlock>
            </ScrollViewer>
        <Button x:Name="HelpBtn" Content="User Guide &amp; Video" Click="HelpBtn_Click" Grid.Row="2" Style="{StaticResource @InputButtonStyle}" FontWeight="Bold" HorizontalAlignment="Right" Padding="0,0,0,0" Margin="0,0,50,0" VerticalAlignment="Center" Width="140"/>
        
    </Grid>
</Page>
