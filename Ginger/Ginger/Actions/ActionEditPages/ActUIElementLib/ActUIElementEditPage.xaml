    <Page x:Class="Ginger.Actions._Common.ActUIElementLib.ActUIElementEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:UserControls="clr-namespace:Amdocs.Ginger.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"      
	  Title="ActUIElementEditPage">
    <Grid Background="{StaticResource $BackgroundColor_LightGray}">

        <Grid.RowDefinitions>
            <RowDefinition Height="400*"/>
            <RowDefinition/>
            <RowDefinition Height="37"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Locate By:" Style="{StaticResource $LabelStyle}"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <ComboBox  x:Name="ElementLocateByComboBox"  Style="{StaticResource $FlatInputComboBoxStyle}" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="How to Locate the Element on the screen"  Margin="45,0,0,0"/>
            </StackPanel>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="LocateValueLable" Content="Locate Value:" Style="{StaticResource $LabelStyle}" Grid.Column="0"/>
                <Frame x:Name="LocateValueEditFrame" NavigationUIVisibility="Hidden" BorderBrush="Transparent" Grid.Column="1"/>
            </Grid>

            <StackPanel Orientation="Horizontal">
                <StackPanel  Orientation="Horizontal">
                    <Label Content="Element Type:" Style="{StaticResource $LabelStyle}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <UserControls:ImageMakerControl x:Name="xElementTypeImage" ImageType="Element" SetAsFontImageWithSize="16"  Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                </StackPanel>
                <ComboBox x:Name="ElementTypeComboBox"  SelectionChanged="ElementTypeComboBox_SelectionChanged"  Style="{StaticResource $FlatInputComboBoxStyle}" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="10,0,0,0"/>
                <CheckBox x:Name="xWidgetElementCheckBox" Click="XWidgetsElementType_Click" Content="Widgets Element" Visibility="Collapsed" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Element Action:"  Name="ElementActionLabel" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource $LabelStyle}" />
                <ComboBox x:Name="ElementActionComboBox" Style="{StaticResource $FlatInputComboBoxStyle}" SelectionChanged="ElementActionComboBox_SelectionChanged" IsSynchronizedWithCurrentItem="True" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0" x:Name="UIElementActionEditPagePanel"  >
            <Frame x:Name="UIElementActionEditPageFrame" Content="UIElementActionEditPageFrame" Visibility="Collapsed" BorderBrush="Transparent" BorderThickness="0" NavigationUIVisibility="Hidden" />
        </StackPanel>

        <StackPanel Grid.Row="2"  Margin="0,10,0,0">
            <Frame x:Name="PlatformSpecificFrame" Content="PlatformSpecificFrame" Visibility="Collapsed" Margin="0,0,859,0" NavigationUIVisibility="Hidden"/>
        </StackPanel>

        <StackPanel Grid.Row="3"  Margin="0,20,0,0">
            <Label Content="Configurations Description:" Style="{StaticResource $LabelStyle}"></Label>
            <TextBlock x:Name="xActionInfoLabel" TextWrapping="Wrap" Style="{StaticResource @TextBlockStyle}" DockPanel.Dock="Top" TextAlignment="Left"  FontSize="12" Margin="0,0,0,0"></TextBlock>
        </StackPanel>
    </Grid>
</Page>

