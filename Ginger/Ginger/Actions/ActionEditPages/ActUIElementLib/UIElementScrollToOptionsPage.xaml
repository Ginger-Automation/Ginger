<Page
      x:Class="Ginger.Actions._Common.ActUIElementLib.UIElementScrollToElementOptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ginger.Actions._Common.ActUIElementLib"
      xmlns:UserControlsLib="clr-namespace:Ginger.UserControlsLib"
      xmlns:Actions="clr-namespace:Ginger.Actions"
      mc:Ignorable="d" 
      Title="UIElementScrollToOptionsPage">

    <Grid Background="{StaticResource $BackgroundColor_White}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Vertical Alignment:"  Name="VertivalAlignmentLabel" MinWidth="150" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource $LabelStyle}" />
            <UserControlsLib:UCComboBox x:Name="verticalScrollAlignmentComboBox" Width="75" Margin="0,0,0,0" />            
        </StackPanel>
    </Grid>
</Page>
