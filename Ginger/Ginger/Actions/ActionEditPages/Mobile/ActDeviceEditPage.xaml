    <Page x:Class="Ginger.Actions._Common.ActDeviceEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ActDeviceEditPage">

    <Grid>
        <StackPanel>            

            <Label>Device Action</Label>
            <ComboBox x:Name="DeviceActionComboBox"></ComboBox>

            <StackPanel>
                <Label>Size (i.e.: 1280x720 - Leave empty for same as device resolution</Label>
                <TextBox x:Name="SizeTextBox"></TextBox>
            </StackPanel>

            <StackPanel>
                <Label>Bit rate (i.e.: 6000000 for 6Mbps or Leave empty for default of 4Mbps</Label>
                <TextBox x:Name="BitRateTextBox"></TextBox>
            </StackPanel>

            <StackPanel>
                <Label>Time Limit (i.e.: 10 for 10 seconds Max time is 180 seconds = 3 minutes</Label>
                <TextBox x:Name="TimeLimitTextBox"></TextBox>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
