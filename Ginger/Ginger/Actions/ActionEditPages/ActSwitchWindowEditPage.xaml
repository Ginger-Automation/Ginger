    <Page x:Class="Ginger.Actions.ActSwitchWindowEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Actions="clr-namespace:Ginger.Actions" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ActSwitchWindowEditPage">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="Sync Time (seconds):" Style="{StaticResource @LabelStyle}" VerticalAlignment="Top"/>
            <Actions:UCValueExpression x:Name="WaitTimeTextBox" ToolTip="Max waiting time for searching window" VerticalAlignment="Top"  Width="150"/>
        </StackPanel>

    </Grid>
</Page>
