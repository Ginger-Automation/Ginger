<Page x:Class="Ginger.Actions.ActSikuliEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls" xmlns:Actions="clr-namespace:Ginger.Actions"
      mc:Ignorable="d" 
	Title="ActLowLevelClicksEditPage">

    <Grid Height="Auto" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition MaxHeight="60"/>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition MinHeight="50" Height="Auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <DockPanel>
                <Label Content="Operation Type : "/>
                <ComboBox x:Name="xSikuliOperationComboBox" Margin="15,0" MinWidth="300" Height="25" MaxWidth="450"
                      SelectionChanged="xSikuliOperationComboBox_SelectionChanged" Style="{StaticResource $FlatInputComboBoxStyle}" >
                </ComboBox>
            </DockPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" x:Name="xSetTextRow" Grid.Row="1" Visibility="Collapsed">
            <Label Content="Text : "/>
            <Actions:UCValueExpression x:Name="xSetTextValueTextBox" ToolTip="Set Text Element Value for Sikuli Operation Pattern" MinWidth="100" MaxWidth="300" Margin="15,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <DockPanel>
                <Label Content="Window : "/>
                <ComboBox x:Name="xActiveProcessesTitlesComboBox" MinWidth="250" MaxWidth="400"
                           Style="{StaticResource $FlatInputComboBoxStyle}" >
                </ComboBox>
                <usercontrols:ucButton x:Name="xRefreshActiveWindows" ToolTip="Refresh Active Windows List" ButtonImageWidth="15" ButtonImageHeight="15"
                                       Margin="5,0" ButtonImageType="Refresh" Click="xRefreshActiveWindows_Click"/>
                <CheckBox x:Name="xShowSikuliCheckBox" Content="Show Sikuli Console" Margin="0,20" />
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="15,0">
            <Label Content="Pattern : " />
            <Actions:UCValueExpression x:Name="xPatternImageLocationTextBox" ToolTip="Element Image Path for Sikuli Operation Pattern" MinWidth="300" MaxWidth="450"/>
            <Button x:Name="xBrowsePatternButton" Content="Browse" Click="xBrowsePatternButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource @InputButtonStyle}"/>
            <usercontrols:ucButton x:Name="xCaptureLocatorImageButton" ButtonType="ImageButton" Click="CaptureLocatorImageButton_Click" ToolTip="Capture Application Element Image" ButtonFontImageSize="15" ButtonImageType="Camera" Foreground="Red" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel CanVerticallyScroll="True" CanHorizontallyScroll="True" Grid.Row="4" >
            <StackPanel Orientation="Horizontal">
                <Label Content=" Element Screenshot Preview :" />
                <usercontrols:ucButton x:Name="xRefreshPatternImage" ToolTip="Refresh Pattern Image" ButtonImageWidth="15" ButtonImageHeight="15"
                                       Margin="5,0" ButtonImageType="Reset" Click="xRefreshPatternImage_Click"/>
            </StackPanel>
            <Canvas x:Name="xElementImageCanvas" Visibility="Collapsed">
                <Image x:Name="xElementImage" />
            </Canvas>
        </StackPanel>
    </Grid>
</Page>
