    <Page x:Class="Ginger.Actions.ActPWLEditPage" xmlns:Actions="clr-namespace:Ginger.Actions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ActPWLEditPage">

    <Grid>
        <StackPanel>            
            <Label Grid.Column="0" Content="Action Type:" Style="{StaticResource @SubInputFieldLabelStyle}"/>
            <ComboBox x:Name="ActionNameComboBox" Style="{StaticResource @InputComboBoxStyle}" />
            <Label Grid.Column="0" Content="The other element locate By:" Style="{StaticResource @SubInputFieldLabelStyle}"/>
            <ComboBox Grid.Column="1" x:Name="cbooLocateBy"  Style="{StaticResource @InputComboBoxStyle}" />
            <Label Grid.Column="2" Content="The other element locate Value:" Style="{StaticResource @SubInputFieldLabelStyle}" />
            <Actions:UCValueExpression Grid.Column="3" HorizontalAlignment="Stretch" x:Name="txtoLocateValue" />

        </StackPanel>
    </Grid>
</Page>

