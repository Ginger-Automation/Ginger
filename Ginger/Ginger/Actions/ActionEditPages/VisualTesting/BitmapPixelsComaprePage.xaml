<Page x:Class="Ginger.Actions.VisualTesting.BitmapPixelsComaprePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:UserControlsLib="clr-namespace:Ginger.UserControlsLib"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="BitmapPixelsComaprePage">
    <Grid x:Name="ColApplitoolsComparison" Margin="15,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
            <Label Style="{StaticResource $LabelStyle}" Grid.Column="0" VerticalAlignment="Center" MinWidth="150px">Error Metric:</Label>
            <UserControlsLib:UCComboBox x:Name="ErrorMetricComboBox" Grid.Column="1" HorizontalAlignment="Left" Width="600" Margin="30,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
