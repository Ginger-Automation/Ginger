    <Page x:Class="Ginger.Actions._Common.ActUIElementLib.LocateByXYEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
      xmlns:Actions="clr-namespace:Ginger.Actions"       
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
	Title="LocateByXYEditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="69*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.Column="0" >X</Label>
        <Actions:UCValueExpression Grid.Row="1" HorizontalAlignment="Stretch" x:Name="txtLocateValueX" Grid.Column="1" LostFocus="txtLocateValueXY_LostFocus"/>
        <Label Grid.Row="1" Grid.Column="2">Y</Label>
        <Actions:UCValueExpression HorizontalAlignment="Stretch" x:Name="txtLocateValueY" Grid.Column="3" Grid.Row="1" LostFocus="txtLocateValueXY_LostFocus" Margin="5,0,10,0" />
    </Grid>
</Page>
