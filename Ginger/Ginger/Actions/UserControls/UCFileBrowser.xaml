    <UserControl x:Class="Ginger.Actions.UCFileBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    <Grid RenderTransformOrigin="0.947,0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="FilePathTextBox" TextWrapping="Wrap" Text="" Grid.ColumnSpan="1" AcceptsReturn="True" Style="{StaticResource @TextBoxStyle}" Height="25"/>
        <Button x:Name="BrowseFileButton" Click="BrowseFileButton_Click" Content="..." Width="Auto" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Style="{StaticResource @InputButtonStyle}" Height="25"/>
    </Grid>
</UserControl>
