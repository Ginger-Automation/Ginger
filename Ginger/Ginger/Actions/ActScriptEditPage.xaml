<Page xmlns:Actions="clr-namespace:Ginger.Actions"  x:Class="Ginger.Actions.ActScriptEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ActVBScriptEditPage">
    <Grid>
        <StackPanel Margin="0,10,0,0">
            <DockPanel>
                <Label Style="{StaticResource @InputFieldLabelStyle}" Width="370" Height="35" >Script Interpreter</Label>
                <ComboBox x:Name="ScriptInterpreterComboBox" SelectionChanged="ScriptInterpreterComboBox_SelectionChanged" Style="{StaticResource $FlatInputComboBoxStyle}" Width="370"/>
            </DockPanel>
            <StackPanel x:Name="InterpreterPanel" >
                <DockPanel x:Name="InterpreterPanelLabel" Visibility="Collapsed">
                    <Label x:Name="ScriptInterpreterLabel" Style="{StaticResource @InputFieldLabelStyle}" Height="35" Width="370">Script Interpreter Path</Label>
                    <Actions:UCFileBrowser x:Name="ScriptInterPreter" Width="370"/>
                </DockPanel>
                <DockPanel x:Name="script" Visibility="Visible">
                    <Label Style="{StaticResource @InputFieldLabelStyle}" Width="370" Height="35">Script Action</Label>
                    <ComboBox x:Name="ScriptActComboBox" SelectionChanged="ScriptActComboBox_SelectionChanged" Style="{StaticResource $FlatInputComboBoxStyle}" Width="370"></ComboBox>
                </DockPanel>
            </StackPanel>

            <DockPanel x:Name="ScriptStackPanel">
                <Label Style="{StaticResource @InputFieldLabelStyle}" Height="35" >Script Name - Located in Solution~\Documents\Scripts\</Label>
                <ComboBox x:Name="ScriptNameComboBox" SelectionChanged="ScriptNameComboBox_SelectionChanged" Style="{StaticResource $FlatInputComboBoxStyle}" Width="370" ></ComboBox>
               
            </DockPanel>
            <Label x:Name="ScriptDescriptionLabel" HorizontalAlignment="Left">Script Description</Label>
        </StackPanel>

    </Grid>
</Page>
        
