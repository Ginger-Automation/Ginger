    <Page x:Class="Ginger.Actions.ActMobileDeviceEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:UserControlsLib1="clr-namespace:Ginger.UserControlsLib"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ActMobileDeviceEditPage">

    <Grid>

        <StackPanel Orientation="Vertical">
            <StackPanel  HorizontalAlignment="Left" Orientation="Horizontal" Margin="5">
                <Label Style="{StaticResource $LabelStyle}" Content="Action Type:"/>
                <UserControlsLib1:UCComboBox x:Name="xActionNameComboBox" VerticalAlignment="Top" Width="200"  ></UserControlsLib1:UCComboBox>
            </StackPanel>
            <StackPanel  HorizontalAlignment="Left" Orientation="Horizontal"  Margin="5">
                <Label x:Name="xKeyPressLable" Style="{StaticResource $LabelStyle}" Content="Key to press:" Visibility="Collapsed"/>
                <UserControlsLib1:UCComboBox x:Name="xKeyPressComboBox" VerticalAlignment="Top" Visibility="Collapsed" Width="200"></UserControlsLib1:UCComboBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
