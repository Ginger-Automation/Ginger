<Window x:Class="Ginger.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
        Title="SplashWindow" Height="400" Width="535" WindowStartupLocation="CenterScreen" Topmost="True" Loaded="Window_Loaded" WindowStyle="None" ShowInTaskbar="False">
    <Border BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
            <usercontrols:ImageMakerControl  ImageType="GingerSplash" Height="400" Width="650" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Top="-5" Canvas.Left="-61"/>
            <Label x:Name="lblAppVersion" Content="Version x.x.x.x" Style="{StaticResource $LabelStyle}" Foreground="WhiteSmoke"  FontWeight="Bold" Canvas.Left="386" Canvas.Top="260" Margin="0"/>
            <!--<Label  x:Name="lblLoadingInfo" Content="Loading Info" FontFamily="open sans" FontSize="12" Foreground="{StaticResource $BackgroundColor_Gray}"  Canvas.Left="515" Canvas.Top="258"/>-->
            <!--<Label x:Name="lblLoading" Content="Loading..." FontFamily="open sans" FontSize="15" Foreground="{StaticResource $BackgroundColor_DarkBlue}"  Canvas.Left="515" Canvas.Top="243" />-->
        </Canvas>
    </Border>
</Window>