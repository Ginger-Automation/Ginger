    <Window x:Class="Ginger.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashWindow" Height="300" Width="700" WindowStartupLocation="CenterScreen" Topmost="True" Loaded="Window_Loaded" WindowStyle="None" ShowInTaskbar="False">
    <!--Redesiging the splash screen and cleaning all commented code-->
    <Grid >
        <Border BorderBrush="{StaticResource $amdocsLogoLinarGradientBrush}" BorderThickness="4" Padding="0">
            <Canvas Background="{StaticResource $BackgroundColor_White}">
                <Image Source="{StaticResource @GingerLogoNew_Small}" Height="200" Width="641" Canvas.Left="21" Canvas.Top="6"/>
                <Label x:Name="lblAppVersion" Content="AppVersion" Style="{StaticResource $LabelStyle}" Foreground="{StaticResource $SelectionColor_Pink}"  Canvas.Left="38" Canvas.Top="197" Width="500"></Label>
                <Label x:Name="lblLoading" Content="Loading..." FontFamily="open sans" FontSize="15" Foreground="{StaticResource $BackgroundColor_DarkBlue}" Height="37" Width="135" Canvas.Left="1" Canvas.Top="229" ></Label>
                <Label  x:Name="lblLoadingInfo" Content="Loading Info" FontFamily="open sans" FontSize="12" Foreground="{StaticResource $BackgroundColor_Gray}" Height="29" Width="135" Canvas.Left="5" Canvas.Top="251" FontWeight="Bold"></Label>
            </Canvas>
        </Border>
    </Grid>
</Window>