<Window x:Class="Ginger.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
        Title="SplashWindow" Height="350" Width="580" WindowStartupLocation="CenterScreen" Topmost="True" Loaded="Window_Loaded" WindowStyle="None" ShowInTaskbar="False">
    <Border BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
            <usercontrols:ImageMakerControl  ImageType="GingerSplash" Height="350" Width="610" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Top="-7" Canvas.Left="-19"/>
            <Label x:Name="lblAppVersion" Content="AppVersion" Style="{StaticResource $LabelStyle}" Foreground="{StaticResource $SelectionColor_Pink}"  FontWeight="Bold" Canvas.Left="462" Canvas.Top="307" Margin="0"/>
            <!--<Label  x:Name="lblLoadingInfo" Content="Loading Info" FontFamily="open sans" FontSize="12" Foreground="{StaticResource $BackgroundColor_Gray}"  Canvas.Left="515" Canvas.Top="258"/>-->
            <!--<Label x:Name="lblLoading" Content="Loading..." FontFamily="open sans" FontSize="15" Foreground="{StaticResource $BackgroundColor_DarkBlue}"  Canvas.Left="515" Canvas.Top="243" />-->
        </Canvas>
    </Border>
</Window>