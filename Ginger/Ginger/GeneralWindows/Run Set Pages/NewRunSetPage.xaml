                    <Label Content="Environment :" x:Name="xEnvironmentCombolbl" Foreground="{StaticResource $BackgroundColor_DarkBlue}" ></Label>      
                    <DockPanel Margin="0,0,0,0"  HorizontalAlignment="Left">
                            <ComboBox x:Name="xRunsetEnvironmentCombo" ToolTip="Environment" ContextMenu="{x:Null}" Width="150" Style="{DynamicResource $FlatInputComboBoxStyle}" Margin="0,5,5,3"></ComboBox>
                    </DockPanel>                      
                    <usercontrols:ucButton x:Name="xExecutionModeBtn" ToolTip="Sequential Execution" ButtonType="ImageButton" ButtonFontImageSize="20" ButtonImageWidth="20" ButtonImageHeight="20" ButtonImageType="SequentialExecution" Click="executionMode_Click"></usercontrols:ucButton>
                </DockPanel>   
                  <StackPanel  HorizontalAlignment="Right" Background="{StaticResource $BackgroundColor_LightGray}" Margin="0,0,-3,0">
                    <DockPanel Margin="0,0,0,0" x:Name="xOtherControlsDocPanel">                            
                         <usercontrols:ucButton x:Name="xSelectedItemExecutionSyncBtn" ToolTip="Runner Items Selection is Synced with Execution Progress, Click to Un-Sync it" ButtonType="ImageButton" ButtonFontImageSize="17" ButtonImageWidth="20" ButtonImageHeight="20" ButtonImageType="Visible"  Click="xSelectedItemExecutionSyncBtn_Click"></usercontrols:ucButton>
                         <z:ZoomPanel x:Name="xZoomPanel"></z:ZoomPanel>
                    </DockPanel>
                </StackPanel>
            </DockPanel>
         
        <Frame Name="xRunnersFrame" HorizontalAlignment="Left"  Background="White" Grid.Row="1" Margin="0 0 0 0" />
          <DockPanel  HorizontalAlignment="Stretch" Panel.ZIndex="1" VerticalAlignment="Top"  Background="{StaticResource $BackgroundColor_LightGray}" Grid.Row="2" >
                <Label x:Name="xRunnerNamelbl" VerticalAlignment="Top" Margin="40 0 0 0" Content="Runner Name"  HorizontalAlignment="Left" FontSize="20" Foreground="{StaticResource $SelectionColor_Pink}" />
                <ComboBox x:Name="xRunnersCombo" ToolTip="Runners"  Validation.ErrorTemplate="{x:Null}" Width="150" Style="{DynamicResource $FlatInputComboBoxStyle}" Margin="40,5,5,3" Visibility="Collapsed"  FontSize="20" FontWeight="Bold" Height="30" Foreground="{StaticResource $SelectionColor_Pink}"></ComboBox>
                <DockPanel HorizontalAlignment="Right" x:Name="xRunnerInfoDocPanel" Visibility="Collapsed">
                     
                <DockPanel x:Name="xRunnerButtonsDocPanel">
                    <usercontrols:ucButton x:Name="xRunRunnerBtn"  ToolTip="Rest &amp; Run Runner" ButtonType="ImageButton" ButtonFontImageSize="15" ButtonImageWidth="15" ButtonImageHeight="15" ButtonImageType="Play" Click="xRunRunnerBtn_Click" ButtonStyle="{StaticResource $ImageButtonStyle_Execution}"></usercontrols:ucButton>
                    <usercontrols:ucButton x:Name="xStopRunnerBtn" ToolTip="Stop Runner Execution" ButtonType="ImageButton" ButtonFontImageSize="15" ButtonImageWidth="15" ButtonImageHeight="15" ButtonImageType="Stop" Click="xStopRunnerBtn_Click" ButtonStyle="{StaticResource $ImageButtonStyle_Execution}"></usercontrols:ucButton>
                    <usercontrols:ucButton x:Name="xContinueRunnerBtn"  ToolTip="Continue Runner Execution from Last Stopped Action" ButtonType="ImageButton" ButtonFontImageSize="15" ButtonImageWidth="15" ButtonImageHeight="15" ButtonImageType="Continue" Click="xContinueRunnerBtn_Click" ButtonStyle="{StaticResource $ImageButtonStyle_Execution}"></usercontrols:ucButton>
                </DockPanel>
                     <GridSplitter Width="1" Height="30" HorizontalAlignment="Stretch" Background="{StaticResource $SelectionColor_Pink}" Margin="10 0 10 0"/>               
                    <Label x:Name="xRuntimeLbl" Content="00:00:00" Width="90" Height="32" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="{StaticResource $SelectionColor_LightBlue}" />                    
