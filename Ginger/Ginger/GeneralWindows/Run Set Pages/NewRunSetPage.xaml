                <TextBlock x:Name="xRunsetDescriptionTextBlock" Grid.Row="1" Grid.Column="0" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Margin="0,10,200,0" Text="Description: this is my butifual runset" VerticalAlignment="Stretch" HorizontalAlignment="Left" Style="{StaticResource $TextBlockStyle}" FontSize="16" Foreground="{StaticResource $BackgroundColor_DarkBlue}"  ></TextBlock>
                <StackPanel x:Name="xRunSetOperationsPanel" Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 40 0">
                    <usercontrols:ucButton x:Name="xRunsetSaveBtn"  ButtonType="ImageButton"  ButtonFontImageSize="25" ButtonImageWidth="25" ButtonImageHeight="25" ButtonImageType="Save" Click="xRunsetSaveBtn_Click">
                        <usercontrols:ucButton.ToolTip>
                            <GingerCore:ucTextDicResource Text="Save [RunSet] Changes"/>
                        </usercontrols:ucButton.ToolTip>
                    </usercontrols:ucButton>
                    <usercontrols:ucButton x:Name="xRunsetReportBtn" ButtonType="ImageButton"  ButtonFontImageSize="25" ButtonImageWidth="25" ButtonImageHeight="25" ButtonImageType="Report" Click="xRunsetReportBtn_Click">
                        <usercontrols:ucButton.ToolTip>
                            <GingerCore:ucTextDicResource Text="Generate [RunSet] Report"/>
                        </usercontrols:ucButton.ToolTip>
                    </usercontrols:ucButton>
                    <usercontrols:ucButton x:Name="xRunSetChange"  ButtonType="ImageButton"  ButtonFontImageSize="25" ButtonImageWidth="25" ButtonImageHeight="25" ButtonImageType="Open" Click="xRunSetChange_Click">
                        <usercontrols:ucButton.ToolTip>
                            <GingerCore:ucTextDicResource Text="Select other [RunSet]"/>
                        </usercontrols:ucButton.ToolTip>
                    </usercontrols:ucButton>
                    <usercontrols:ucButton x:Name="xAddRunSet" ButtonType="CircleImageButton"  ButtonFontImageSize="20" ButtonImageWidth="20" ButtonImageHeight="20" ButtonImageType="Add" Click="xAddRunSet_Click">
                        <usercontrols:ucButton.ToolTip>
                            <GingerCore:ucTextDicResource Text="Add New [RunSet]"/>
                        </usercontrols:ucButton.ToolTip>
                    </usercontrols:ucButton>
                    <usercontrols:ucButton x:Name="xFindAndReplace" ButtonType="CircleImageButton"  ButtonFontImageSize="20" ButtonImageWidth="20" ButtonImageHeight="20" ButtonImageType="Search" Click="xFindAndReplace_Click">
                        <usercontrols:ucButton.ToolTip>
                            <GingerCore:ucTextDicResource Text="Find And Replace in [RunSet]"/>
                        </usercontrols:ucButton.ToolTip>
                    </usercontrols:ucButton>
                    <Menu x:Name="xOtherRunSetOperationsMenu" Background="Transparent">
                        <MenuItem Cursor="Hand">
                            <MenuItem.Header>
                                <usercontrols:ImageMakerControl ImageType="EllipsisH" SetAsFontImageWithSize="22"  Width="18" Height="30" Margin="5,5,5,5"/>
                            </MenuItem.Header>
                            <MenuItem x:Name="xReloadRunsetMenuItem" Style="{StaticResource $MenuItemStyle}" Click="xRunSetReload_Click">
                                <!--<MenuItem.Icon>
                                   <usercontrols:ImageMakerControl ImageType="Refresh" SetAsFontImageWithSize="22"  Width="20" HorizontalAlignment="Left" Margin="0 0 0 5"/>
                                </MenuItem.Icon>-->
                                <MenuItem.Header >
                                    <DockPanel>
                                        <usercontrols:ImageMakerControl ImageType="Refresh" SetAsFontImageWithSize="22"  Width="20" HorizontalAlignment="Left" Margin="0 5 5 5"/>
                                        <GingerCore:ucTextDicResource Text="Reload [RunSet]" FontSize="15" Margin="5 5 0 0"/>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem x:Name="xAnalyzerMenuItem" Style="{StaticResource $MenuItemStyle}" Click="analyzerRunset_Click">
                                <MenuItem.Header>
                                    <DockPanel>
                                        <usercontrols:ImageMakerControl ImageType="Analyze" SetAsFontImageWithSize="22"  Width="20" HorizontalAlignment="Left" Margin="0 5 5 5"/>
                                        <GingerCore:ucTextDicResource Text="Analyze [RunSet]" FontSize="15" Margin="5 5 0 0"/>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem x:Name="xCreateShortcutMenuItem" Style="{StaticResource $MenuItemStyle}" Click="createShortcutRunset_Click">
                                <MenuItem.Header>
                                    <DockPanel>
                                        <usercontrols:ImageMakerControl ImageType="ShareExternal" SetAsFontImageWithSize="22"  Width="20" HorizontalAlignment="Left" Margin="0 5 5 5"/>
                                        <GingerCore:ucTextDicResource Text="Create [RunSet] Executer Shotcut" ToolTip="Create [RunSet] Executer Shotcut on Dektop" FontSize="15" Margin="5 5 0 0"/>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem x:Name="xExportToAlmBtnMenuItem" Style="{StaticResource $MenuItemStyle}" Click="xExportToAlmBtn_Click">
                                <MenuItem.Header>
                                    <DockPanel>
                                        <usercontrols:ImageMakerControl ImageType="Export" SetAsFontImageWithSize="22"  Width="20" HorizontalAlignment="Left" Margin="0 5 5 5"/>
                                        <GingerCore:ucTextDicResource Text="Export Execution Result to ALM"  FontSize="15" Margin="5 5 0 0"/>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                </StackPanel>
            </Grid>


            <!--ToDo: Replace existing tab logic with listview as Tab-->
            <ListView x:Name="xMainNavigationListView" DockPanel.Dock="Left" Height="30" Background="{StaticResource $BackgroundColor_LightGray}" Grid.Row="1" Grid.Column="1" Visibility="Collapsed">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"></StackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListViewItem x:Name="xRunnerItem" Style="{StaticResource $ListViewItemUnderlineStyle}">Runners</ListViewItem>
                <ListViewItem x:Name="xOperationsItem" Style="{StaticResource $ListViewItemUnderlineStyle}">Operations</ListViewItem>
                <ListViewItem x:Name="xConfigurationItem" Style="{StaticResource $ListViewItemUnderlineStyle}" >Configurations</ListViewItem>
                <ListViewItem x:Name="xExecutionSummaryItem" Style="{StaticResource $ListViewItemUnderlineStyle}" >Executions History</ListViewItem>
                <ListViewItem x:Name="xALMDefectsOpeningItem" Style="{StaticResource $ListViewItemUnderlineStyle}">ALM Defects Opening</ListViewItem>
            </ListView>
            <DockPanel Margin="0,0,0,0" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Panel.ZIndex="1">
                <usercontrols:ucButton x:Name="xResetRunsetBtn" ToolTip="Reset All Runners" ButtonType="RoundTextAndImageButton" ButtonText="Reset"
                                       ButtonImageType="Reset"  ButtonFontImageSize="15" ButtonImageWidth="15" ButtonImageHeight="15" 
                                       Click="xResetRunsetBtn_Click" ButtonStyle="{StaticResource $RoundTextAndImageButtonStyle_Execution}">
                </usercontrols:ucButton>
                <usercontrols:ucButton x:Name="xRunRunsetBtn"  ButtonType="RoundTextAndImageButton"  ButtonText="Run" ButtonImageType="Play"  ButtonFontImageSize="15" ButtonImageWidth="15" ButtonImageHeight="15"  Click="xRunRunsetBtn_Click" ButtonStyle="{StaticResource $RoundTextAndImageButtonStyle_Execution}">
                    <usercontrols:ucButton.ToolTip>
                        <GingerCore:ucTextDicResource Text="Rest &amp; Run All Runners"/>
                    </usercontrols:ucButton.ToolTip>
                </usercontrols:ucButton>
                <usercontrols:ucButton x:Name="xStopRunsetBtn" ButtonType="RoundTextAndImageButton" ButtonText="Stop" ButtonImageType="Stop" ButtonFontImageSize="15" ButtonImageWidth="15" ButtonImageHeight="15"  Click="xStopRunsetBtn_Click" ButtonStyle="{StaticResource $RoundTextAndImageButtonStyle_Execution}">
                    <usercontrols:ucButton.ToolTip>
                        <GingerCore:ucTextDicResource Text="Stop All Runners"/>
                    </usercontrols:ucButton.ToolTip>
                </usercontrols:ucButton>
                <usercontrols:ucButton x:Name="xContinueRunsetBtn" ButtonType="RoundTextAndImageButton" ButtonText="Continue" ButtonImageType="Continue" ButtonFontImageSize="15" ButtonImageWidth="15" ButtonImageHeight="15"  Click="xContinueRunsetBtn_Click" ButtonStyle="{StaticResource $RoundTextAndImageButtonStyle_Execution}">
                    <usercontrols:ucButton.ToolTip>
                        <GingerCore:ucTextDicResource Text="Continue All Stopped Runners"/>
                    </usercontrols:ucButton.ToolTip>
                </usercontrols:ucButton>
            </DockPanel>
            <!---->
        <TabControl DockPanel.Dock="Left" SelectionChanged="TabControl_SelectionChanged" x:Name="RunTab" Background="{StaticResource $BackgroundColor_LightGray}" Grid.Row="2" Grid.Column="1" BorderThickness="1" BorderBrush="{StaticResource $BackgroundColor_LightGray}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
