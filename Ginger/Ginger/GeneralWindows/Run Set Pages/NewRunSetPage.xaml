                        </DockPanel>
                    </Border>
                </TabItem.Header>  
                
        <Grid Name="xRunnersGrid">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="RunSetInfo" Height="40"/>
                <RowDefinition x:Name="Row1" Height="270"/>         
