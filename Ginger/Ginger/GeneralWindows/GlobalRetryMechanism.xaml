<Page x:Class="Ginger.GeneralWindows.GlobalRetryMechanism"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ginger.GeneralWindows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GlobalRetryMechanism">

    <Grid Background="{StaticResource @Skin1_ColorC}">
        <DockPanel>
            <StackPanel x:Name="GlobalRetryMechanismPnl" DockPanel.Dock="Top" Margin="0,10,0,10">
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="GlobalEnableRetryMechnanismCheckBox" Content="Enable Global Retry Mechanism" Style="{StaticResource @CheckBoxStyle}" Margin="10,0,0,0" VerticalAlignment="Center" Checked="EnableGlobalRetryMechanismCheckBox_CheckedUnChecked" Unchecked="EnableGlobalRetryMechanismCheckBox_CheckedUnChecked"/>
                </StackPanel>
                <StackPanel x:Name="GlobalRetryMechnanismConfigsPnl" Orientation="Vertical" Margin="20,10,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label Style="{StaticResource @LabelStyle}">Interval (seconds):</Label>
                        <TextBox x:Name="GlobalRetryIntervalTextBox" Margin="0,0,0,0" Style="{StaticResource @TextBoxStyle}"  ToolTip="Number of seconds to wait before re-run" Width="50" FontSize="14" FontWeight="Bold" Text="5"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Label Style="{StaticResource @LabelStyle}">Max Retries Number:</Label>
                        <TextBox x:Name="GlobalRetryMaxRetriesNumberTextBox" Margin="0,0,0,0" Style="{StaticResource @TextBoxStyle}" ToolTip="Max number of retries before finally failing the action" Width="50" FontSize="14" FontWeight="Bold" Text="3"/>
                    </StackPanel>
                </StackPanel>
                <Label HorizontalAlignment="Left" Margin="0,20,0,0" Style="{StaticResource @LabelStyle}">Note: Retry mechanism is executed after error handler and before flow control.</Label>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
