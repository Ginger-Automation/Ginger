<Page x:Class="Ginger.ApplicationModelsLib.POMModels.AddEditPOMWizardLib.AIGeneratedPreviewWizardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      xmlns:UserControls="clr-namespace:Amdocs.Ginger.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AIGeneratedPreviewWizardPage">
    <Page.Resources>
        <Style x:Key="WizardActionButtonStyle" TargetType="UserControls:ucButton" BasedOn="{StaticResource $RoundTextAndImageButtonStyle}">
            <Setter Property="ButtonType" Value="RoundTextAndImageButton" />
            <Setter Property="ButtonFontImageSize" Value="15" />
            <Setter Property="ButtonImageWidth" Value="15" />
            <Setter Property="ButtonImageHeight" Value="15" />
            <Setter Property="Visibility" Value="Visible" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="400*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <UserControls:ucButton x:Name="xReGenerateButton"  Grid.Column="0" Style="{StaticResource WizardActionButtonStyle}" HorizontalAlignment="Left" ButtonText="Re-Generate Preview" ButtonImageType="Reply" Click="ReGenerateButtonClicked" Visibility="Collapsed"/>
                <UserControls:ucButton x:Name="xViewGenerateHTMLButton" Grid.Column="2" Style="{StaticResource WizardActionButtonStyle}" HorizontalAlignment="Right" ButtonText="View Source Code" ButtonImageType="File" Click="ViewGenerateHTMLButtonClicked" Visibility="Collapsed"/>
            </Grid>
            
            <StackPanel x:Name="xGenerateAIPanel" Visibility="Collapsed"  Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label x:Name="xGenerateAILabel" Style="{StaticResource @HorizontalExpanderLightLabelStyle}" FontWeight="Normal" FontSize="12" Content="Generating Preview From AI Please wait... Processing your request..."/>
            </StackPanel>
            <wv2:WebView2 x:Name="MyWebView" Grid.Row="2" Visibility="Visible" />

        </Grid>

    </Grid>
</Page>
