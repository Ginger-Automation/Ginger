<Page x:Class="Ginger.ApplicationModelsLib.APIModels.APIModelBodyNodeSyncPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ginger.ApplicationModelsLib.APIModels"
      mc:Ignorable="d" 
      Height="650" Width="850"
      Title="Body Node Deletion Preview">

    <Grid Background="{StaticResource $BackgroundColor_LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"  />
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="xExplanationLable" Grid.Row="0" Style="{StaticResource @TextBlockStyle}" Background="{StaticResource $BackgroundColor_LightGray}" TextWrapping="Wrap" FontSize="14" FontWeight="Light" Padding="0,5,0,0" Margin="0,0,0,0" >Below marked in red are the nodes in the API Model Request Body which about to be deleted.<LineBreak/>Please review those and approve if to continue with deletion.</TextBlock>

        <ScrollViewer x:Name="xTextBlockScrollViewer" Grid.Row="1" Background="{StaticResource $BackgroundColor_White}">
            <TextBlock x:Name="xTextBlock"/>
        </ScrollViewer>
        <CheckBox x:Name="xRemoveAssociatedParams" Grid.Row="2"  DockPanel.Dock="Left" VerticalAlignment="Center" Background="{StaticResource $BackgroundColor_LightGray}" HorizontalAlignment="Left" Style="{StaticResource @CheckBoxStyle}" Content="Remove also associated parameters" />
    </Grid>
</Page>
