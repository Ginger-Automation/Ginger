<Window x:Class="Ginger.Drivers.DriversWindows.ConsoleDriverWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      
        xmlns:UserControlsLib="clr-namespace:Amdocs.Ginger.UserControls"
        Title="ConsoleDriverWindow" Height="600" Width="900" 
        Closing="ConsoleDriverWindow_Closing" 
        Background="#0C0B12">
    <Window.Resources>
        <Style x:Key="ThemedRoundButtonStyle" TargetType="Button" BasedOn="{StaticResource $ImageButtonStyle}">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="18" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Dark ScrollBar Style -->
        <Style x:Key="DarkScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="#121118"/>
            <Setter Property="Foreground" Value="#777"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track Name="PART_Track" IsDirectionReversed="true">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Background="#121118" Foreground="#777" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Background="#121118" Foreground="#777" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="#2A283B" BorderBrush="#555" BorderThickness="1"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Light ScrollBar Style -->
        <Style x:Key="LightScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track Name="PART_Track" IsDirectionReversed="true">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Background="#F0F0F0" Foreground="#666" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Background="#F0F0F0" Foreground="#666" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="#C8C8C8" BorderBrush="#999" BorderThickness="1"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="xRootGrid" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/> <!-- Top controls bar -->
            <RowDefinition Height="*"/>  <!-- Console area -->
            <RowDefinition Height="Auto"/> <!-- Command area -->
        </Grid.RowDefinitions>

        <!-- Top Control Bar -->
        <Border x:Name="TopBarBorder" Grid.Row="0" CornerRadius="4" Background="#28263B" BorderBrush="#37324B" BorderThickness="1" Padding="6" SnapsToDevicePixels="True">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button x:Name="RecordButton" Click="RecordButton_Click" Style="{StaticResource ThemedRoundButtonStyle}" Margin="0,0,6,0" ToolTip="Start/Stop Recording" Background="#28263B" BorderBrush="#37324B" Foreground="White">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <UserControlsLib:ImageMakerControl x:Name="RecordIcon" ImageType="Circle" SetAsFontImageWithSize="12" Width="14" Height="14" Margin="0,0,6,0" ImageForeground="Red" />
                            <TextBlock Text="Record" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="NewActionButton" Click="NewActionButton_Click"  Style="{StaticResource ThemedRoundButtonStyle}" Margin="0,0,6,0" ToolTip="Create new Console Action" Background="#28263B" BorderBrush="#37324B" Foreground="White">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <UserControlsLib:ImageMakerControl ImageType="New" SetAsFontImageWithSize="14" Width="16" Height="16" Margin="0,0,4,0" ImageForeground="#4DA3FF" />
                            <TextBlock Text="New Action" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ThemeToggleButton" Click="ThemeToggleButton_Click" Style="{StaticResource ThemedRoundButtonStyle}" Margin="0,0,6,0" ToolTip="Toggle Dark/Light Theme" Background="#28263B" BorderBrush="#37324B" Foreground="White">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <UserControlsLib:ImageMakerControl ImageType="Settings" SetAsFontImageWithSize="14" Width="16" Height="16" Margin="0,0,4,0" ImageForeground="#9D6BFF" />
                            <TextBlock Text="Theme" />
                        </StackPanel>
                    </Button>
                    <Separator Margin="4,0" Width="1" Background="#37324B"/>
                    <Button x:Name="TopButton" Content="Top" Margin="2,0" Width="60" Style="{StaticResource ThemedRoundButtonStyle}" Click="TopButton_Click" ToolTip="Pin on Top" Background="#28263B" BorderBrush="#37324B" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" >
                    <Label x:Name="xStatusLabel" Content="Disconnected" Foreground="Red" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Console Output Area -->
        <Border x:Name="ConsoleBorder" Grid.Row="1" CornerRadius="4" BorderBrush="#37324B" BorderThickness="1" Background="#121118" Padding="6" SnapsToDevicePixels="True">
            <RichTextBox x:Name="ConsoleTextBox" Background="#121118" Foreground="#00AAFF" FontFamily="Consolas" FontSize="14" IsReadOnly="True" BorderThickness="0" FontWeight="Bold"
                         AutomationProperties.Name="Console Output" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        </Border>

        <!-- Command Entry Area -->
        <Border x:Name="CommandBorder" Grid.Row="2" CornerRadius="4" Background="#28263B" BorderBrush="#37324B" BorderThickness="1" Padding="6" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="CommandTextBox" Grid.Column="0" FontSize="14" FontFamily="Consolas" Background="#14121D" Foreground="#DCDCEB" BorderBrush="#37324B" BorderThickness="1" Padding="4" KeyUp="CommandTextBox_KeyUp" AutomationProperties.Name="Command Input" GotFocus="CommandTextBox_GotFocus" LostFocus="CommandTextBox_LostFocus"/>
                <Button x:Name="GoButton" Grid.Column="1" Click="GoButton_Click"  Content="Run" Style="{StaticResource ThemedRoundButtonStyle}" Margin="8,0,0,0" Width="70" Background="#28263B" BorderBrush="#37324B" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>
