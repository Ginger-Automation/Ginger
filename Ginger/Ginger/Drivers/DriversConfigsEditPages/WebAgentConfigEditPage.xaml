<Page x:Class="Ginger.Drivers.DriversConfigsEditPages.WebAgentConfigEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
 xmlns:sys="clr-namespace:System;assembly=mscorlib"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Actions="clr-namespace:Ginger.BusinessFlowWindows"
 mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="800"
      Title="WebAgentConfigEditPage">

    <Grid  x:Name="xPageGrid" Grid.IsSharedSizeScope="True" Background="{StaticResource $BackgroundColor_White}">
        <TabControl>
            <TabItem Header="Configurations" Style="{StaticResource $RoundedTab}">
                <DockPanel>
                    <Expander x:Name="xSettingsExpander" ExpandDirection="Down"  Style="{StaticResource $ExpanderStyle}" DockPanel.Dock="Top" Margin="0,0,0,0" BorderThickness="0">
                        <Expander.Header>
                            <Label Content="Proxy Settings" Style="{StaticResource $HorizontalExpanderLabelStyle}"/>
                        </Expander.Header>
                        <Expander.Content >
                            <StackPanel HorizontalAlignment="Left" Margin="10,5,0,0">
                                <StackPanel.Resources>
                                    <Thickness x:Key="ChildGap">0 5 0 5</Thickness>
                                    <sys:Double x:Key="LabelWidth">150</sys:Double>
                                    <sys:Double x:Key="ControlWidth">270</sys:Double>
                                    <sys:Double x:Key="VEControlWidth">300</sys:Double>
                                </StackPanel.Resources>
                                <CheckBox x:Name="xAutoDetectProxyCB" Content="Auto Detect Proxy" Checked="xAutoDetectProxyCB_Checked" Unchecked="xAutoDetectProxyCB_Unchecked_1" ToolTip="Enable automatic detection of proxy settings. This will use WPAD (Web Proxy Auto-Discovery) to find the appropriate proxy configuration." VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource $CeckBoxStyle}"/>
                                <StackPanel x:Name="xProxyPnl">
                                    <StackPanel Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Proxy:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xProxyVE"  ToolTip="Specify the proxy server address (e.g., http://proxy.example.com:8080) for network requests."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="By Pass Local Proxy:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xByPassProxyVE"  ToolTip="List the addresses that should bypass the proxy server (e.g., localhost, 127.0.0.1). Separate multiple addresses with a comma."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Proxy Auto Config Url:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xProxyAutoConfigUrlVE"  ToolTip="Provide the URL to the Proxy Auto-Configuration (PAC) file. This file contains a script to determine the appropriate proxy for each request."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>
                    <Expander  ExpandDirection="Down"  Style="{StaticResource $ExpanderStyle}" DockPanel.Dock="Top" Margin="0,0,0,0" BorderThickness="0">
                        <Expander.Header>
                            <Label Content="Session Management" Style="{StaticResource $HorizontalExpanderLabelStyle}"/>
                        </Expander.Header>
                        <Expander.Content >
                            <StackPanel HorizontalAlignment="Left" Margin="10,5,0,0">
                                <StackPanel.Resources>
                                    <Thickness x:Key="ChildGap">0 5 0 5</Thickness>
                                    <sys:Double x:Key="LabelWidth">150</sys:Double>
                                    <sys:Double x:Key="ControlWidth">270</sys:Double>
                                    <sys:Double x:Key="VEControlWidth">300</sys:Double>
                                </StackPanel.Resources>
                                
                                <StackPanel >
                                    <StackPanel Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Page Load Strategy:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xPageLoadStrategyComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"  Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Implicit Wait:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xImplicitWaitVE"  ToolTip="Specify the proxy server address (e.g., http://proxy.example.com:8080) for network requests."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Http Server Time Out:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xHttpServerTimeOutVE"  ToolTip="List the addresses that should bypass the proxy server (e.g., localhost, 127.0.0.1). Separate multiple addresses with a comma."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Page Load Time Out:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xPageLoadTimeOutVE"  ToolTip="Provide the URL to the Proxy Auto-Configuration (PAC) file. This file contains a script to determine the appropriate proxy for each request."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Driver Load Waiting Time:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xDriverLoadWaitingTimeVE"  ToolTip="Provide the URL to the Proxy Auto-Configuration (PAC) file. This file contains a script to determine the appropriate proxy for each request."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>

                    <Expander x:Name="xSettingsExpan" ExpandDirection="Down"  Style="{StaticResource $ExpanderStyle}" DockPanel.Dock="Top" Margin="0,0,0,0" BorderThickness="0">
                        <Expander.Header>
                            <Label Content="Browser Configurations" Style="{StaticResource $HorizontalExpanderLabelStyle}"/>
                        </Expander.Header>
                        <Expander.Content >
                            <StackPanel HorizontalAlignment="Left" Margin="10,5,0,0">
                                <StackPanel.Resources>
                                    <Thickness x:Key="ChildGap">0 5 0 5</Thickness>
                                    <sys:Double x:Key="LabelWidth">150</sys:Double>
                                    <sys:Double x:Key="ControlWidth">270</sys:Double>
                                    <sys:Double x:Key="VEControlWidth">300</sys:Double>
                                </StackPanel.Resources>

                                <StackPanel >
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Browser Version:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xBrowserVersionVE"  ToolTip="Specify the version of the browser to be used (e.g., 89.0.4389.90)."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Emulation Device Name:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xEmulationDeviceNameVE"  ToolTip="Enter the name of the device to emulate (e.g., iPhone X, Galaxy S9) for responsive testing."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Browser User Agent:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xBrowserUserAgentVE"  ToolTip="Provide the User-Agent string to identify the browser, operating system, and device for requests."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="User Profile Folder Path:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xUserProfileFolderPathVE"  ToolTip="Specify the path to the user profile folder to use custom browser settings and extensions."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Download Folder Path:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xDownloadFolderPathVE"  ToolTip="Provide the path to the folder where downloaded files should be saved."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Browser Height:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xBrowserHeightVE"  ToolTip="Set the height of the browser window in pixels (e.g., 1080)."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Browser Width:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xBrowserWidthVE"  ToolTip="Set the width of the browser window in pixels (e.g., 1920)."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Browser Executable Path:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xBrowserExecutablePathVE"  ToolTip="Specify the path to the browser executable file (e.g., C:\Program Files\Google\Chrome\Application\chrome.exe)."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Driver File Path:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xDriverFilePathVE"  ToolTip="Provide the path to the browser driver file (e.g., chromedriver.exe) needed for automation."  Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                       <Label Content="Browser Private Mode:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xBrowserPrivateModeComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}" ToolTip="Enable or disable private/incognito mode for the browser. This mode doesn't save browsing history or cookies."  Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                       <Label Content="Headless Browser Mode:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xHeadlessBrowserModeComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}" ToolTip="Enable or disable headless mode for the browser. Headless mode runs the browser without a graphical user interface."  Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                       <Label Content="Browser Minimized:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xBrowserMinimizedComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}" ToolTip="Start the browser in minimized mode, reducing resource usage by not rendering the window on screen."  Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>

                    <Expander x:Name="xEdgeIE" ExpandDirection="Down"  Style="{StaticResource $ExpanderStyle}" DockPanel.Dock="Top" Margin="0,0,0,0" BorderThickness="0">
                        <Expander.Header>
                            <Label Content="Edge/IE Specific" Style="{StaticResource $HorizontalExpanderLabelStyle}"/>
                        </Expander.Header>
                        <Expander.Content >
                            <StackPanel HorizontalAlignment="Left" Margin="10,5,0,0">
                                <StackPanel.Resources>
                                    <Thickness x:Key="ChildGap">0 5 0 5</Thickness>
                                    <sys:Double x:Key="LabelWidth">150</sys:Double>
                                    <sys:Double x:Key="ControlWidth">270</sys:Double>
                                    <sys:Double x:Key="VEControlWidth">300</sys:Double>
                                </StackPanel.Resources>

                                <StackPanel >

                                    <StackPanel Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <CheckBox x:Name="xUse64BitbrowserCB" Content="Use 64Bit browser"   VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource $CeckBoxStyle}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <CheckBox x:Name="xIgnoreIEProtectedModeCB" Content="Ignore IE Protected Mode"  VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource $CeckBoxStyle}"/>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Ensure Clean Session:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xEnsureCleanSessionComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"  Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Open IE Mode In Edge:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xOpenIEModeInEdgeComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>                                    
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Edge Excutable Path:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xEdgeExcutablePathVE"   Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>


                    <Expander x:Name="xAdvanceSetting" ExpandDirection="Down"  Style="{StaticResource $ExpanderStyle}" DockPanel.Dock="Top" Margin="0,0,0,0" BorderThickness="0">
                        <Expander.Header>
                            <Label Content="Advance settings" Style="{StaticResource $HorizontalExpanderLabelStyle}"/>
                        </Expander.Header>
                        <Expander.Content >
                            <StackPanel HorizontalAlignment="Left" Margin="10,5,0,0">
                                <StackPanel.Resources>
                                    <Thickness x:Key="ChildGap">0 5 0 5</Thickness>
                                    <sys:Double x:Key="LabelWidth">250</sys:Double>
                                    <sys:Double x:Key="ControlWidth">270</sys:Double>
                                    <sys:Double x:Key="VEControlWidth">300</sys:Double>
                                </StackPanel.Resources>

                                <StackPanel >

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Selenium User Arguments:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xSeleniumUserArgumentsVE"    Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Debug Address:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xDebugAddressVE"   Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Start BMP BAT File:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xStartBMPBATFileVE"   Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>
                                    
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Extension Path:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <Actions:UCValueExpression x:Name="xExtensionPathVE"   Width="{StaticResource VEControlWidth}"/>
                                    </StackPanel>

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Disable Extension:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xDisableExtensionComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Enable Native Events:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xEnableNativeEventsComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Start BMP:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xStartBMPComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Hide Console Window:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xHideConsoleWindowComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Unhandled Prompt Behavior:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xUnhandledPromptBehaviorComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Content="Browser Log Level:" Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}"/>
                                        <ComboBox  Name="xBrowserLogLevelComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>
                                    
                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}">
                                        <TextBlock TextWrapping="Wrap">Take Only Active Frame Or Window Screen Shot In Case Of Failure:</TextBlock>
                                        </Label>
                                        <ComboBox  Name="xFrameWindowScreenShotComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"  Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                    <StackPanel  Orientation="Horizontal" Margin="{StaticResource ChildGap}">
                                        <Label Style="{StaticResource $LabelStyle}" Width="{StaticResource LabelWidth}">
                                            <TextBlock TextWrapping="Wrap"  >Handel IFrame Shift Automatically For Pom Element:</TextBlock>
                                        </Label>
                                        <ComboBox  Name="xAutoFrameShiftForPOMComboBox" Style="{StaticResource $FlatEditInputComboBoxStyle}"   Width="{StaticResource VEControlWidth}"  ></ComboBox>
                                    </StackPanel>

                                    

                               
                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>

                </DockPanel>
            </TabItem>
           </TabControl>
    </Grid>
</Page>
