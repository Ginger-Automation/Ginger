<UserControl x:Class="Ginger.UserControlsLib.UCWindowsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:Amdocs.Ginger.UserControls"
             xmlns:local="clr-namespace:Ginger.UserControlsLib"             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="xWindowGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Window:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox Grid.Column="1" x:Name="WindowsComboBox" HorizontalAlignment="Stretch" SelectionChanged="WindowsComboBox_SelectionChanged" Style="{DynamicResource $FlatInputComboBoxStyle}" 
                                  VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource $SelectionColor_Pink}"/>
        
        <userControls:ucButton Grid.Column="2" x:Name="xRefreshWindowsButton" ButtonType="RoundTextAndImageButton" ButtonText="Refresh" ButtonImageType="Refresh"  
                               HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="Refresh Windows List" ButtonFontImageSize="15" ButtonImageWidth="15" 
                               ButtonImageHeight="15" Click="RefreshWindowsButton_Click" ButtonStyle="{StaticResource $RoundTextAndImageButtonStyle}"/>
        
        <Button Grid.Column="3" x:Name="AddSwitchWindowActionButton" Click="AddSwitchWindowActionButton_Click" ToolTip="Add Switch Window Action to Business Flow" 
                Style="{StaticResource @InputImageButtonStyle_NoBorder}" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image Source="{StaticResource @AddToList_16x16}" Height="16" Width="16"/>
        </Button>
    </Grid>

</UserControl>
