<UserControl x:Class="Amdocs.Ginger.UserControls.ChatbotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
             Height="700" Width="400" Background="White" BorderBrush="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Background="MediumPurple" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="White" Content="Ask Lisa"/>
            <Button HorizontalAlignment="Right" MouseLeftButtonDown="Button_MouseLeftButtonDown" Click="Button_Click" Width="30" BorderThickness="0" Background="MediumPurple">
                <usercontrols:ImageMakerControl ImageType="CloseWhite" Width="15"></usercontrols:ImageMakerControl>
            </Button>

        </Grid>
        <Grid Grid.Row="1">
            <ScrollViewer>
                <StackPanel  x:Name="chatPanel">
                    <!-- Lisa Intro messages -->

                    <!--<TextBlock Text="Hello! I'm Lisa" HorizontalAlignment="Center" Margin="5"/>
                    <TextBlock Text="Ask Me Anything about Ginger" HorizontalAlignment="Center" Margin="5"/>-->
                </StackPanel>
            </ScrollViewer>
            <usercontrols:ImageMakerControl Visibility="Collapsed" x:Name="xLoader" ImageType="Processing" Width="20"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5">
                <!-- User input -->
                
                <TextBox Name="xUserInputTextBox" Width="365">

                    <TextBox.Template>

                        <ControlTemplate>

                            <Grid>

                                <TextBox Text="{Binding ElementName=xUserInputTextBox, Path=Text}"  VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="100"  Grid.Column="0"/>

                                <Button Click="SendMessage" VerticalContentAlignment="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Grid.Column="1" Background="Transparent" BorderThickness="0">

                                    <usercontrols:ImageMakerControl x:Name="xSend" Grid.Row="1" ImageType="SendIcon" Width="30" Foreground="MediumPurple" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                </Button>

                            </Grid>

                        </ControlTemplate>

                    </TextBox.Template>

                </TextBox>

               <!-- <TextBox x:Name="xUserInputTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="240" Height="100" Margin="5"/>
                <Button x:Name="xSend" Click="SendMessage" VerticalContentAlignment="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Background="Transparent" BorderThickness="0">
    <usercontrols:ImageMakerControl  ImageType="SendIcon" Width="30" Foreground="MediumPurple" HorizontalAlignment="Center" VerticalAlignment="Center"/>
</Button> -->
                
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
