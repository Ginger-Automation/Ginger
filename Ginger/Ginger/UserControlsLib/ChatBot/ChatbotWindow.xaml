<UserControl x:Class="Amdocs.Ginger.UserControls.ChatbotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
             Height="700" Width="400" Background="White" BorderBrush="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="110"/>
        </Grid.RowDefinitions>
        <Grid>
            <Label Background="MediumPurple" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="White" Content="Ask Lisa"/>
            <Button HorizontalAlignment="Right" MouseLeftButtonDown="Button_MouseLeftButtonDown" Click="Button_Click" Width="30" BorderThickness="0" Background="MediumPurple">
                <usercontrols:ImageMakerControl ImageType="CloseWhite" Width="15"></usercontrols:ImageMakerControl>
            </Button>

        </Grid>
        <Grid Grid.Row="1">
            <ScrollViewer  Name="scrollViewer" VerticalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_ScrollChanged">
                <StackPanel x:Name="chatPanel" VerticalAlignment="Bottom">
                </StackPanel>
            </ScrollViewer>

            <usercontrols:ImageMakerControl  Visibility="Collapsed" x:Name="xLoader" ImageType="Processing" Width="20" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="2" Background="White">
            <StackPanel  Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,0">
                <!-- User input -->
                <TextBox x:Name="xUserInputTextBox" TextChanged="xUserInputTextBox_TextChanged" KeyDown="TextBox_KeyDown"  Width="395">
                    <TextBox.Template>
                        <ControlTemplate>
                            <Grid>
                                <TextBox KeyDown="TextBox_KeyDown" Text="{Binding ElementName=xUserInputTextBox, Path=Text}"  VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Background="Transparent"  Height="100" Grid.Column="0"/>
                                <TextBlock Text="Message Lisa" Name="xPlaceholder"  FontWeight="Light" Panel.ZIndex="-1" VerticalAlignment="Top" Foreground="DarkGray" Margin="5,0,0,0" />
                                <Button Click="SendMessage" VerticalContentAlignment="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="30" Grid.Column="1" Background="Transparent" BorderThickness="0">
                                    <usercontrols:ImageMakerControl x:Name="xSend" Grid.Row="1" ImageType="SendIcon" Width="30" Foreground="MediumPurple" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                            </Grid>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>