<UserControl x:Class="Amdocs.Ginger.UserControls.ChatbotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
             Height="700" Width="400" Background="White" BorderBrush="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="110"/>
        </Grid.RowDefinitions>
        <Grid Background="#7036dc">
            <usercontrols:ImageMakerControl Width="20" Margin="10,0,0,0" ImageType="Chat" HorizontalAlignment="Left" />
            <Label Content="Ask Lisa" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Foreground="White" Margin="33,0,0,0" />
            <Button HorizontalAlignment="Right" MouseLeftButtonDown="Button_MouseLeftButtonDown" Click="Button_Click" Width="30" BorderThickness="0" Background="Transparent">
                <usercontrols:ImageMakerControl ImageType="CloseWhite" Width="15"></usercontrols:ImageMakerControl>
            </Button>

        </Grid>
        <Grid Grid.Row="1">
                <ScrollViewer  Name="scrollViewer" VerticalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_ScrollChanged" Width="auto">
                    <StackPanel x:Name="chatPanel" VerticalAlignment="Bottom">
                    </StackPanel>
                </ScrollViewer>

                <usercontrols:ImageMakerControl  Visibility="Collapsed" x:Name="xLoader" ImageType="Processing" Width="20" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="2" Background="White" HorizontalAlignment="Stretch" Margin="5">
                 <Grid.RowDefinitions>
     <RowDefinition Height="17"/>
     <RowDefinition/>
 </Grid.RowDefinitions>
 <usercontrols:ImageMakerControl Grid.Row="0" Height="13" ImageType="Copy" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,35,2" />
 <usercontrols:ImageMakerControl Grid.Row="0" Height="15" ImageType="Medical" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,0,10,2"/>
                <StackPanel  Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" >
                    <!-- User input -->
                    <TextBox x:Name="xUserInputTextBox" TextChanged="xUserInputTextBox_TextChanged" PreviewKeyDown="TextBox_KeyDown" Width="385" Height="100" Padding="5">
                        <TextBox.Template>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Grid>
                                    <Border x:Name="border" CornerRadius="5" BorderThickness="1.5" BorderBrush="Gray">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" />
                                            <TextBlock Text="Type Your Message..." Name="xPlaceholder" FontWeight="Light" Panel.ZIndex="-1" VerticalAlignment="Top" Foreground="DarkGray" Padding="5"/>
                                                                          <Button Click="SendMessage" VerticalContentAlignment="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="30" Grid.Column="1" Background="Transparent" BorderThickness="0">
                                    <usercontrols:ImageMakerControl x:Name="xSend" Grid.Row="1" ImageType="SendArrow" Width="30" Foreground="MediumPurple" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="MediumPurple" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="False">
                                        <Setter TargetName="border" Property="BorderBrush" Value="Gray" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>

</UserControl>