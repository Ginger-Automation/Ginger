<Page x:Class="Ginger.BusinessFlowPages.ActivitiesGroupSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
      mc:Ignorable="d" 
      xmlns:h="clr-namespace:Ginger.Help"
      h:GingerHelpProvider.HelpString="Activities Group"
      d:DesignHeight="100" d:DesignWidth="400"
      Title="Select Activities Group">

    <Grid Background="{StaticResource $BackgroundColor_LightGray}">
        <StackPanel x:Name="xGroupPanel" Margin="10" >
            <Label Content="Group:" Style="{StaticResource $LabelStyle}" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="xGroupComboBox" AutomationProperties.AutomationId="Group AID" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource $FlatInputComboBoxStyle}" Margin="5,0,0,0" />
                <usercontrols:ucButton x:Name="xAddGroupBtn" ButtonType="ImageButton"  ButtonImageType="Add" ButtonFontImageSize="16" ToolTip="Add Group" Click="XAddGroupBtn_Click" VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
