<Page x:Class="Ginger.GeneralWindows.TwoLevelMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenusPage" KeyDown="Page_KeyDown">

    <DockPanel>
        <!--Main Navigation Panel-->
        <ListView x:Name="xMainNavigationListView" DockPanel.Dock="Top" Height="30" Background="{StaticResource $BackgroundColor_LightGray}" SelectionChanged="xMainNavigationListView_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <!--Sub Navigation Panel-->
        <ListView x:Name="xSubNavigationListView" DockPanel.Dock="Top" Height="25" Background="{StaticResource $BackgroundColor_LightGray}" SelectionChanged="xSubNavigationListView_SelectionChanged" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <!--Selected Item Page-->
        <Frame x:Name="xSelectedItemFrame" Background="White" DockPanel.Dock="Top" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Page>
