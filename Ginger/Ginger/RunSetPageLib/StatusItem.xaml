    <UserControl x:Class="Ginger.MoveToGingerWPF.Run_Set_Pages.StatusItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
               xmlns:local="clr-namespace:Ginger.Run"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="Transparent">
    <Grid>
    <Polygon  Points="0,0,25,0, 0,55"  x:Name="xStatusTri" Stroke="{StaticResource $PendingStatusColor}" Fill="{StaticResource $PendingStatusColor}" HorizontalAlignment="Right" >
        <Polygon.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform AngleX="0"/>
                <RotateTransform Angle="90"/>
                <TranslateTransform X="25" Y="0"/>
            </TransformGroup>
        </Polygon.RenderTransform>
    </Polygon>
    <usercontrols:ImageMakerControl x:Name="xStatusIcon" Margin="0 0 0 0" Padding="0" SetAsFontImageWithSize="25"  Width="30" Height="30" FontWeight="Thin" Visibility="Collapsed"/>
    </Grid>
</UserControl>
