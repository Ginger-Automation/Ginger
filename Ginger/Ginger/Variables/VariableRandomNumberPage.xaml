    <Page x:Class="Ginger.Variables.VariableRandomNumberPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="185" d:DesignWidth="300"
	Title="VariableRandomNumberPage">

    <Grid>        
        <StackPanel>
            <Label Style="{StaticResource @InputFieldLabelStyle}">Min Value:</Label>
            <TextBox x:Name="txtMinValue" Style="{StaticResource @TextBoxStyle}"></TextBox>
            <Label Style="{StaticResource @InputFieldLabelStyle}">Max Value:</Label>
            <TextBox x:Name="txtMaxValue" Style="{StaticResource @TextBoxStyle}"></TextBox>
            <Label Style="{StaticResource @InputFieldLabelStyle}">Interval:</Label>
            <TextBox x:Name="txtInterval" Style="{StaticResource @TextBoxStyle}"></TextBox>
            <StackPanel Background="{StaticResource $BackgroundColor_LightGray}" >
                <CheckBox x:Name="cbInteger" Content="Integer" Style="{StaticResource @InputCheckBoxStyle}" Margin="0,10,0,0"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
