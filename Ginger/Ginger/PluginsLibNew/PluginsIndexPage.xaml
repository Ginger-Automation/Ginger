<Page xmlns:Ginger="clr-namespace:Ginger"  x:Class="Ginger.PlugInsWindows.PluginsIndexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ginger.PlugInsWindows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PluginsIndexPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="593*"/>
            <ColumnDefinition Width="207*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="11*"/>
            <RowDefinition  Height="25"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label FontSize="16">Online Plugins Index - to download and add to the solution select the plugin and click install</Label>
        </StackPanel>


        <Ginger:ucGrid x:Name="xPluginsGrid" Grid.Row="1" ShowAdd="Collapsed" ShowClearAll="Collapsed" ShowCopy="Collapsed" ShowCut="Collapsed" ShowDelete="Collapsed" ShowDuplicate="Collapsed" ShowEdit="Collapsed" />
        

        <TextBlock x:Name="xStatusTextBlock" Grid.Row="2" Text="Loading..."/>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock x:Name="xNameTextBlock" FontSize="14" FontWeight="Bold">{Plugin Name}</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Label>Version</Label>
                <ComboBox x:Name="xVersionComboBox" Width="100"></ComboBox>
            </StackPanel>
            <Label HorizontalAlignment="Left">Release Name</Label>
            <TextBlock x:Name="xReleaseNameTextBlock" FontSize="14" FontWeight="Bold">{Release Name}</TextBlock>
            <Label  HorizontalAlignment="Left">Published</Label>
            <TextBlock x:Name="xPublishedTextBlock" FontSize="14" FontWeight="Bold">{Published}</TextBlock>
            <Label HorizontalAlignment="Left">Size</Label>
            <TextBlock x:Name="xSizeTextBlock" FontSize="14" FontWeight="Bold">{Size}</TextBlock>
            <Label HorizontalAlignment="Left">Downloads</Label>
            <TextBlock x:Name="xDownloads" FontSize="14" FontWeight="Bold">{Downloads}</TextBlock>
            <Button x:Name="xInstallButonn" Click="xInstallButonn_Click" Width="150" Height="35">Install</Button>
        </StackPanel>

    </Grid>
</Page>
